<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.rmasc.fireroad.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"
            android:background="@color/colorBackLight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:text="User Name"
                android:textSize="18sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/txtReporteDispositivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="dd/mm/aaaa HH:mm" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right"
                    android:src="@drawable/bluetoothlogo"
                    android:scaleType="fitXY"
                    android:id="@+id/modoTransmision"
                    />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.78"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


               <ImageView
                   android:id="@+id/CircularImageViewUser"
                    android:src="@drawable/bordes"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/no_user"
                   android:scaleType="fitXY"
                   android:padding="0dp"


                          />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTituloBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

   <Switch

        android:id="@+id/switchEncendido"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:theme="@style/Color1SwitchStyle"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="5dp"
        android:text="Conectado"/>



</LinearLayout>

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/btnMapa"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/mapa"
        />
</LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBateria"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.7"
                        android:src="@drawable/bateria_0"
                        />

                    <ImageView
                        android:id="@+id/imgGasolina"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.7"
                        android:src="@drawable/gass_0"
                        />

                    <ImageView

                        android:id="@+id/imgGps"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.7"
                        android:src="@drawable/bateria_0"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtbatMoto"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.7"
                        android:gravity="center_horizontal"

                        android:text="Bateria Moto"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.7"
                        android:gravity="center_horizontal"

                        android:text="gasolina"/>

                    <TextView
                        android:id="@+id/txtbatGps"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.7"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimary"
                        android:text="Bateria Gps"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/monitor_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtKilometraje"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:text="00:00:00"
                    android:textSize="18dp"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnRecorrido"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="70dp"
                        android:text="@string/nuevo_recorrido" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <fragment
                android:id="@+id/fragmentMenu"
                android:name="com.rmasc.fireroad.Adapters.MenuFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/menu_bar" />

        </LinearLayout>

</LinearLayout>


</RelativeLayout>
